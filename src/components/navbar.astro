---
import ThemeIcon from "./themeIcon.astro";
const pathName = Astro.url.pathname.replace(/\//g, "");
---

<nav class="w-full lg:w-6/12 mx-auto flex justify-between py-5 px-5 lg:px-0">
  <a href="/" class="active:scale-95"
    ><h1 class="text-2xl font-bold dark:text-gray-300">Ikhlashmulya</h1></a
  >
  <div id="link" class="flex gap-5 me-3 mt-1 dark:text-gray-300">
    <a
      class={pathName === "project"
        ? "border-b-4 border-b-purple-600"
        : "hover:border-b-4 hover:border-b-purple-600"}
      href="/project">Project</a
    >
    <a
      href="https://blog.ikhlashmulya.my.id/"
      class="hover:border-b-4 hover:border-b-purple-600 flex gap-1"
      >Blog
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="dark:fill-gray-300 fill-gray-800"
        x="0px"
        y="0px"
        width="19"
        height="19"
        viewBox="0 -1 24 20"
      >
        <path
          d="M 5 3 C 3.9069372 3 3 3.9069372 3 5 L 3 19 C 3 20.093063 3.9069372 21 5 21 L 19 21 C 20.093063 21 21 20.093063 21 19 L 21 12 L 19 12 L 19 19 L 5 19 L 5 5 L 12 5 L 12 3 L 5 3 z M 14 3 L 14 5 L 17.585938 5 L 8.2929688 14.292969 L 9.7070312 15.707031 L 19 6.4140625 L 19 10 L 21 10 L 21 3 L 14 3 z"
        ></path>
      </svg></a
    >
    <ThemeIcon />
  </div>
</nav>
